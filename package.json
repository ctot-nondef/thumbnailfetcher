    "commander": "9.4.1"
  },
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.48",
    "@types/node": "18.11.10",
    "chai": "^4.5.0",
    "coverage-badge-creator": "^1.0.21",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "^4.9.5"
  }
